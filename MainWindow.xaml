<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Ra2Helper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ra2Helper"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Ra2Helper">

    <Grid>
        <Grid RowDefinitions ="Auto, Auto, Auto, *">
            <InfoBar x:Name="Notice" IsOpen="True" IsClosable="False" Severity="Informational"
                 x:Uid="WhereIsDir" Grid.Row="0" />
            <Grid x:Name="Prepare" Grid.Row="1" Margin="20">
                <Button Click="SelectGame_Click" x:Uid="SelectGame" HorizontalAlignment="Left"
                Background="#0078d4" Foreground="White" />
                <Button Click="FixPermission_Click" x:Uid="FixPermission" HorizontalAlignment="Right"
     Background="#c42b1c" Foreground="White" x:Name="FixPermission" Visibility="Collapsed" />
            </Grid>
            <Grid x:Name="Features" Grid.Row="2" RowDefinitions="Auto, Auto, Auto, Auto, Auto" Margin="30,0">
                <Grid Grid.Row="0" Margin="0,10">
                    <ToggleButton x:Name="FixLanBattle" x:Uid="FixLan" Click="FixLanBattle_Click" HorizontalAlignment="Left" IsEnabled="False" />
                </Grid>
                <Grid Grid.Row="1" Margin="0,10">
                    <ToggleButton x:Name="FixLanFatalStringManager" x:Uid="FixLanFatalStringManager" Click="FixLanFatalStringManager_Click" HorizontalAlignment="Left" IsEnabled="False" />
                </Grid>
                <Grid Grid.Row="3" ColumnDefinitions="Auto,Auto, Auto" Margin="0,5">
                    <ComboBox x:Name="Ra2Resolutions" x:Uid="Resolutions" MinWidth="200"
                      SelectionChanged="Ra2Resolutions_SelectionChanged" Grid.Column="0" IsEnabled="False">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="local:ResolutionItem">
                                <TextBlock Text="{x:Bind Text}" FontWeight="{x:Bind FontWeight}" Foreground="{x:Bind Foreground}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ToggleSwitch x:Name="Ra2PlayIntroVideo" x:Uid="PlayIntroVideo"
                      IsOn="False" Toggled="Ra2PlayIntroVideo_Toggled" Grid.Column="1" Margin="20, 0" IsEnabled="False" />

                    <Button Click="StartRa2_Click"
Background="#0078d4" Foreground="White" x:Name="Ra2" Grid.Column="2" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Play" />
                            <TextBlock x:Uid="Ra2" Margin="5,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
                <Grid Grid.Row="5" ColumnDefinitions="Auto, Auto, Auto" Margin="0,5">
                    <ComboBox x:Name="YuriResolutions" x:Uid="Resolutions" MinWidth="200"
                      SelectionChanged="YuriResolutions_SelectionChanged" Grid.Column="0" IsEnabled="False">
                        <ComboBox.ItemTemplate>
                            <DataTemplate x:DataType="local:ResolutionItem">
                                <TextBlock Text="{x:Bind Text}" FontWeight="{x:Bind FontWeight}" Foreground="{x:Bind Foreground}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <ToggleSwitch x:Name="YuriPlayIntroVideo" x:Uid="PlayIntroVideo"
                      IsOn="False" Toggled="YuriPlayIntroVideo_Toggled" Grid.Column="1" Margin="20, 0" IsEnabled="False" />

                    <Button Click="StartYuri_Click" Grid.Column="2"
Background="#c42b1c" Foreground="White" x:Name="Yuri" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Play" />
                            <TextBlock x:Uid="Yuri" Margin="5,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <HyperlinkButton x:Uid="FeedbackLink" HorizontalAlignment="Right" VerticalAlignment="Top">
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                <Image Source="ms-appx:///Assets/StoreLogo.scale-400.png" Width="200" Height="200" />
                <TextBlock x:Uid="Feedback" HorizontalAlignment="Center"/>
            </StackPanel>
        </HyperlinkButton>
    </Grid>
</Window>
    